<div class="table-responsive mt-3">
    <table class="table table-hover" style="text-align: center;">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Avatar</th>
            <th scope="col">Full Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Faculty</th>
            <th scope="col">Role</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <% account_list.map((account, index) => { %>
            <tr>
                <td scope="row"><%= index + 1 %></td>
                <td>
                    <img style="max-width: 10rem;"
                         src="/my-assets/media/images/avatar/<%= account.avatar %>"
                         alt="avatar"
                         class="account-avatar">
                </td>
                <td><%= account.full_name %></td>
                <td><%= account.gender %></td>
                <td><%= account.faculty.name %></td>
                <td><%= account.role %></td>
                <td style="vertical-align: middle;">
                    <div class="btn-group-vertical" role="group">
                        <button type="button" class="btn btn-info btn-detail-account"
                                data-account-id="<%= account._id %>">
                            <i class="fa-solid fa-circle-info me-2"></i>
                            Detail
                        </button>
                        <button type="button" class="btn btn-warning btn-edit-account"
                                data-account-id="<%= account._id %>">
                            <i class="fa-solid fa-pen  me-2"></i>
                            Edit
                        </button>
                        <button type="button" class="btn btn-danger btn-delete-account"
                                data-account-id="<%= account._id %>">
                            <i class="fa-solid fa-trash  me-2"></i>
                            Delete
                        </button>
                    </div>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>