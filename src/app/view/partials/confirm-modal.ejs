<button type="button" hidden class="btn btn-primary" id="btn_open_confirm_modal" data-bs-toggle="modal" data-bs-target="#confirm_modal">
</button>
<div class="modal fade" id="confirm_modal" data-bs-backdrop="static" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="background-color: white">
      <div class="modal-header">
        <h5 class="modal-title">Confirm</h5>
      </div>
      <div class="modal-body">
        <p id="question_confirm">Delete selected?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="btn_ok_confirm">Delete</button>
        <button type="button" class="btn btn-secondary" id="btn_close_confirm_modal" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>