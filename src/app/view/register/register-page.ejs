<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/my-assets/media/decoration/blog.svg">
    <title>Sign In</title>

    <link rel="stylesheet" href="/assets/css/all.min.css">

    <link href="/my-assets/css/portal/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/my-assets/css/alert-notification.css">
    <link rel="stylesheet" href="/my-assets/css/loading.css">
</head>
<body style="background: white">
<%- include('../partials/loading') %>

<div class="container-fluid">
    <form id="account_form" enctype="multipart/form-data">
        <div class="row justify-content-center" style="padding: 3rem">
            <div class="col-sm-12 col-md-5 col-lg-4">
                <img class="img-fluid" src="/my-assets/media/decoration/blog.svg" alt="sing up image">
            </div>
            <div class="col-sm-12 col-md-5 col-lg-3 mt-5 ms-5">
                <h2 class="form-title ">Sign Up</h2>
                <form id="login_form" class="mt-5">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" autocomplete required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password Confirm</label>
                        <input type="password" class="form-control" id="password_confirm" autocomplete required>
                    </div>
                    <a href="#" >
                    <p style="color: #FF7900; text-align: end; width: 100%">Forgot password?</p>
                    </a>
                    <button  style="width: 100%" type="submit" class="btn btn-primary mt-5" id="btn_login">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
<script>
    $('#account_form').submit(function (e) {
        e.preventDefault()

       if($('#password').val().length < 8){
           Alert.Show('warning', 'Password must be greater than or equal 8 character')
           return
       }
       else if($('#password')=== $('#password_confirm') ){
           Alert.Show('warning', 'Password and password confirm different')
           return
       }

        const account_data = new FormData(this)
        account_data.set('birth_date', Utils.ConvertDate($('#birth_date').val(),'MM-dd-yyyy'))
        $.ajax({
            url: '/register/register-page',
            type: 'post',
            data: account_data,
            processData: false,
            contentType: false,
            beforeSend: Loading(true),
            success: (response) => {
                setTimeout(() => {
                    if (response.code === 201) {
                        location.href = '/guest/home'
                    } else {
                        Alert.Show('warning', response.message)
                    }
                    Loading(false)
                }, 1500)
            },
            error: () => {
                Alert.Show('danger', 'Something went wrong!')
            }
        })
    })
</script>
</html>