<div class="rounded h-100 p-4">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <% magazine_list.map((magazine, index) => { %>
                <button class="nav-link <%= index === 0 ? 'active' : '' %>"
                        id="nav-home-tab"
                        data-bs-toggle="tab"
                        data-bs-target="#magazine_<%= index %>"
                        type="button"
                        role="tab">
                    <%
                        let icon = 'fa-door-open'
                        if (magazine.is_final_closure) {
                            icon = 'fa-circle-xmark'
                        } else if (magazine.is_closure) {
                            icon = 'fa-door-closed'
                        }
                    %>
                    <%= magazine.start_academic_year + '-' + magazine.end_academic_year %>
                    <i class="fa-solid <%= icon %> ms-2"></i>
                </button>
            <% }) %>
        </div>
    </nav>
    <div class="tab-content pt-3" id="nav-tabContent">
        <% magazine_list.map((magazine, index) => { %>
            <div class="tab-pane fade  <%= index === 0 ? 'active show' : '' %>"
                 id="magazine_<%= index %>"
                 role="tabpanel">
                <%- include('./faculty-table', {faculty_list: magazine.faculties}) %>
            </div>
        <% }) %>
    </div>
</div>
